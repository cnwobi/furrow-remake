{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "sourceMap": true,
    "baseUrl": "./src/",
    "lib": [
      "dom",
      "es2016"
    ],
    "skipLibCheck": true,
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "~/*": [
        "./*"
      ]
    },
    "allowJs": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "jest/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}